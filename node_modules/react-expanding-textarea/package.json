    "jest": "26.4.2",
    "npm-run-all": "4.1.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "rollup": "2.26.7",
    "rollup-plugin-terser": "7.0.1",
    "rollup-plugin-typescript2": "0.27.2",
    "ts-jest": "26.3.0",
    "typescript": "4.0.2"
